<%= form_with(url: login_path, scope: :session, local:true) do |form| %>
  <div class="error">
    <%= flash["error"] %>
  </div>
  <div class="actions">
    <%= form.label :email %>
    <%= form.email_field :email, id: "session_mail" %>

    <%= form.label :password %>
    <%= form.password_field :password, id: "session_password" %>

    <%= form.label :password_confirmation %>
    <%= form.password_field :passord_confirmation, id: "session_password_confirmation" %>

    <%= form.submit %>
  </div>

<% end %>
